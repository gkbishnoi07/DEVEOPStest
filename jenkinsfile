pipeline{
    agent any
    stages{
        stage('Build'){
            steps{
                script {
                    def packageJson = readJSON file: 'package.json'
                    def version = packageJson.version
                    echo "Version: ${version}"
                }
                sh 'npm install'
            }
        }
        stage('Test'){
            steps{
                sh 'npm test'
            }
        }
        stage('Deploy'){
            steps{
                script {
                    def packageJson = readJSON file: 'package.json'
                    def version = packageJson.version
                    echo "Deploying version: ${version}"
                }
                sh 'npm run build'
            }
        }
    }
}