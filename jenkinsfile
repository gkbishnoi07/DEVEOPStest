pipeline {
    agent any
    
    stages {
        stage('Clone Repository') {
            steps {
                git branch: 'main', url: 'https://github.com/gkbishnoi07/DEVEOPStest.git'
            }
        }
    
        stage('npm install') {
            steps {
                sh 'npm install'
            }
        }
        
        stage('Run Tests') {
            steps {
                sh 'npm test || echo "No tests defined"'
            }
        }

        stage('Run Linting') {
            steps {
                sh 'npm run lint || echo "No linting defined"'
            }
        }
        
        stage('Build Application') {
            steps {
                sh 'npm run build'
            }
        }
    }
}
