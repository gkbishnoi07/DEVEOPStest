pipeline {
    agent any
    
    stages {
    
        stage('npm install') {
            steps {
                sh 'npm install'
            }
        }
        
        stage('Run Tests') {
            steps {
                sh 'npm test || echo "No tests defined"'
            }
        }
        
        stage('Build Application') {
            steps {
                sh 'npm run build'
            }
        }
    }
    
}
